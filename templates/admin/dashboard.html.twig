{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto my-8 p-4 bg-white shadow-md rounded-lg">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Tableau de Bord Admin</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Gestion des Utilisateurs -->
            <div class="bg-blue-100 p-4 rounded-lg shadow hover:shadow-lg transition duration-200">
                <h2 class="text-xl font-semibold text-blue-800">Gestion des Utilisateurs</h2>
                <p class="mt-2 text-gray-600">Gérez les utilisateurs de la plateforme.</p>
                <a href="{{ path('admin_users') }}" class="mt-4 inline-block text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded">Accéder</a>
            </div>

            <!-- Gestion des Formations -->
            <div class="bg-green-100 p-4 rounded-lg shadow hover:shadow-lg transition duration-200">
                <h2 class="text-xl font-semibold text-green-800">Gestion des Formations</h2>
                <p class="mt-2 text-gray-600">Ajoutez, modifiez ou supprimez des formations.</p>
                <a href="{{ path('app_formations') }}" class="mt-4 inline-block text-white bg-green-600 hover:bg-green-700 px-4 py-2 rounded">Accéder</a>
            </div>

            <!-- Upload de Fichier CSV -->
            <div class="bg-yellow-100 p-4 rounded-lg shadow hover:shadow-lg transition duration-200">
                <h2 class="text-xl font-semibold text-yellow-800">Upload Fichier CSV</h2>
                <p class="mt-2 text-gray-600">Importez des formations via un fichier CSV.</p>
                <a href="{{ path('admin_import_csv') }}" class="mt-4 inline-block text-white bg-yellow-600 hover:bg-yellow-700 px-4 py-2 rounded">Accéder</a>
            </div>
        </div>
    </div>
{% endblock %}


