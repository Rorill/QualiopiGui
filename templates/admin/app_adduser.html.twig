{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto my-8 p-6 bg-white shadow-md rounded-lg">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Ajouter un Nouvel Utilisateur</h1>

        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.password, {label: 'Mot de Passe', 'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.password, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.LastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.LastName, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.LastName, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.FirstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.FirstName, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(form.FirstName, {'attr': {'class': 'text-red-500 text-sm'}}) }}
        </div>

        <div class="mt-6">
            <button type="submit" class="w-full inline-flex justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Cr√©er l'utilisateur
            </button>
        </div>

        {{ form_end(form) }}

        <div class="mt-6">
            <a href="{{ path('app_admin') }}" class="text-blue-600 hover:text-blue-800 underline">Retour au tableau de bord</a>
        </div>
    </div>
{% endblock %}
